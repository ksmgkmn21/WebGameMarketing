@using WebGameMarketing.Models.EntitiyFramwork
@model List<Games>
@{
    ViewBag.Title = "StoreCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>


<html lang="en">

<body>


    <div class="nk-main">

        <!-- START: Breadcrumbs -->
        <div class="nk-gap-1"></div>
        <div class="container">
            <ul class="nk-breadcrumbs">


                <li><a href="/Home/Home">Home</a></li>


                <li><span class="fa fa-angle-right"></span></li>

                <li><a href="/Store/Store">Store</a></li>


                <li><span class="fa fa-angle-right"></span></li>

                <li><span>Cart</span></li>

            </ul>
        </div>
        <div class="nk-gap-1"></div>
        <!-- END: Breadcrumbs -->




        <div class="container">
            <div class="nk-store nk-store-cart">
                <div class="table-responsive">

                    <!-- START: Products in Cart -->
                    <table class="table nk-store-cart-products">
                        <tbody>

                            @foreach (Games games in Model)
                            {
                                string temp = "~/Content/img/" + games.ID + ".jpg";
                                string imagePath = Url.Content(temp);

                                temp = "/Store/StoreProduct/" + games.ID;
                                string hrefPath = Url.Content(temp);


                                <tr>
                                    <td class="nk-product-cart-thumb">
                                        <a href="@hrefPath" class="nk-image-box-1 nk-post-image">
                                            <img src="@imagePath" alt="However, I have reason" width="115">
                                        </a>
                                    </td>
                                    <td class="nk-product-cart-title">
                                        <h5 class="h6">Product:</h5>
                                        <div class="nk-gap-1"></div>

                                        <h2 class="nk-post-title h4">
                                            <a href="@hrefPath">@games.Name</a>
                                        </h2>
                                    </td>
                                    <td class="nk-product-cart-price">
                                        <h5 class="h6">Price:</h5>
                                        <div class="nk-gap-1"></div>

                                        <strong>@games.Price ₺</strong>
                                    </td>
                                    <td class="nk-product-cart-quantity">
                                    </td>
                                    <td class="nk-product-cart-total">
                                    </td>
                                    <td class="mnt-5">
                                        @{
                                            temp = "/Store/RemoveCart/" + games.ID;
                                            hrefPath = Url.Content(temp);
                                        }
                                        <a href="@hrefPath" value="X" class="nk-btn nk-btn-rounded nk-btn-color-main-1 float-right">
                                            X
                                        </a>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <!-- END: Products in Cart -->


                    <div class="nk-gap-3"></div>
                    <h3 class="nk-decorated-h-2"><span><span class="text-main-1">Your</span> Order</span></h3>
                    <div class="nk-gap"></div>
                    <div class="table-responsive">
                        <table class="nk-table nk-table-sm">
                            <thead class="thead-default">
                                <tr>
                                    <th class="nk-product-cart-title">Product</th>
                                    <th class="nk-product-cart-total">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{decimal totalPrice = 0; }
                                @foreach (Games games in Model)
                                {
                                    totalPrice += games.Price;
                                    <tr>
                                        <td class="nk-product-cart-title">
                                            @games.Name
                                        </td>
                                        <td class="nk-product-cart-total">
                                            @games.Price ₺
                                        </td>
                                    </tr>

                                }

                                    <tr class="nk-store-cart-totals-total">
                                        <td>
                                            Total
                                        </td>
                                        <td>
                                            @totalPrice ₺
                                        </td>
                                    </tr>
                                </tbody>
                        </table>
                    </div>

                </div>
                <div class="nk-gap-1"></div>
              
                <div class="clearfix"></div>
                <div class="nk-gap-2"></div>


                <div class="nk-gap-2"></div>
                <a class="nk-btn nk-btn-rounded nk-btn-color-main-1 float-right" href="/Store/UpdateLibrary">Checkout</a>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="nk-gap-2"></div>






    </div>




    <!-- START: Page Background -->

    <img class="nk-page-background-top" src="~/Content/images/bg-top-4.png" alt="">
    <img class="nk-page-background-bottom" src="~/Content/images/bg-bottom.png" alt="">

    <!-- END: Page Background -->




</body>
</html>


